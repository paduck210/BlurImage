{
  "manifest_version": 2,
  "name": "2032 Wonseok Linkin",
  "description": "For my World Best Husband",
  "version": "1",
  "author": "Jung yu, thanks to @Nithyanandam",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "permissions": ["storage", "activeTab", "declarativeContent"],
  "page_action": {
    "default_title": "HideImage",
    "default_popup": "index.html"
  }
}
